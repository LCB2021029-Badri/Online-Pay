<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ICICIAmountWithdrawFragment">




    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:padding="3dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="371dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/aepslogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Mobile Number"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mobilenumber"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Enter Mobile Number"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Aadhar Card Number"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Enter Aadhar Card Number"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Amount"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Enter Amount"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Bank"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Enter Bank Name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Amount (Available Balance: 3.20)"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="0.00"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/orange"
                android:layout_marginEnd="15dp"
                android:background="@drawable/et_shape"
                android:text="SUBMIT"
                android:layout_marginBottom="20dp"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>




</RelativeLayout>