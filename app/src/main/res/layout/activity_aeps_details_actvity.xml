<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AepsDetailsActvity">

    <TextView
        android:id="@+id/tvKycNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kyc_notice"
        android:layout_marginStart="8dp"
        android:textColor="@color/green"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvKycNote">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvKycNote">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:padding="3dp">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Enter Mobile Number"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:maxLength="10"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Enter 12 DigitNumber"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:maxLength="12"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Enter Email Address"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Enter 10 Digit Pan Card Number"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Enter OTP"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/orange"
                android:layout_marginEnd="15dp"
                android:background="@drawable/et_shape"
                android:text="SUBMIT"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </ScrollView>

</RelativeLayout>