<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PayoutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="649dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Account Number"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Enter Account Number"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Confirm Account Number"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Confirm Account Number"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="IFSC Code"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Enter IFSC Code"
                android:inputType="text"
               android:maxLines="1"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Enter Name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Amount (Available Balance: 3.20)"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="17.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17.5dp"
                android:background="@drawable/et_shape"
                android:elevation="10dp"
                android:ems="10"
                android:hint="0.00"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:paddingStart="18dp"
                android:shadowColor="@color/black"
                android:shadowDy="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/orange"
                android:layout_marginEnd="15dp"
                android:background="@drawable/et_shape"
                android:text="SUBMIT"
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/et_shape"
                android:backgroundTint="@color/black"
                android:text="History"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:itemActiveIndicatorStyle="@color/black"
        app:itemTextColor="@drawable/selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/nav_menu" />

</RelativeLayout>